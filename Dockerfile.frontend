
FROM node:18-alpine

WORKDIR /app

# Copiar package.json e package-lock.json primeiro para cache
COPY package*.json ./

# Instalar dependências
RUN npm install

# Copiar o código fonte
COPY . .

# Expor a porta
EXPOSE 3000

# Comando para desenvolvimento/produção
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]
